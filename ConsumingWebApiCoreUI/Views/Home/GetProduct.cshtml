@model ConsumingWebApiCoreUI.Models.Products

@{
    ViewData["Title"] = "GetProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetProduct</h1>

<h2>
    Get GetProduct by Id
    <a asp-action="Index" class="btn btn-sm btn-primary">Back</a>
</h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Product</button>
    </div>
</form>
@if (Model != null)
{
<h2>Product</h2>
                <table class="table table-sm table-striped table-bordered m-2">
                    <thead>
                        <tr>
                            <th>ProductId</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Color</th>
                            <th>UnitPrice</th>
                            <th>AvailableQuantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.productId</td>
                            <td>@Model.name</td>
                            <td>@Model.category</td>
                            <td>@Model.color</td>
                            <td>@Model.unitPrice</td>
                            <td>@Model.availableQuantity</td>
                        </tr>
                    </tbody>
                </table>}
<div>
